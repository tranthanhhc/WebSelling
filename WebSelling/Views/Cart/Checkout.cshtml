              <div class="card-body">
                    <h5 class="mb-3">The total amount of</h5>
                    <ul class="list-group list-group-flush">
                        @if(Model != null)
                        {
                           @foreach (var line in Model.Lines)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                @line.Product.TenSanPham
                                <span>@line.Quantity</span>
                                <span>@string.Format("{0:C2}",line.Product.GiaLonNhat)</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            Shipping
                            <span>Gratis</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>The total amount of</strong>
                                <strong>
                                    <p class="mb-0">(including VAT)</p>
                                </strong>
                            </div>
                            <span><strong>@string.Format("{0:C2}", Model.ComputeTotalValue())</strong></span>
                            </li>
                        } else
                        {
                            <p>Không có dữ liệu để hiển thị.</p>
                        }
                    </ul> 
                        
                    <button type="button" class="btn btn-primary btn-block waves-effect waves-light">Payment Confirmation</button>
               </div>
            </div>
